<!-- Contact -->
<section id="contact" style="padding:90px;">
    {{#if errorMsg }}
        <p>{{{errorMsg}}}</p>
    {{else}}
</section>
<div class="col-md-12 text-center" style="background-color:#bec0c4">
    <form action="/delete" method="post">
        <input type="hidden" id="id" name="id" value="{{bloglist.blog_id}}">
    
    <img style="width:200px; height:200px;" src=../blog_images/{{bloglist.blog_image}} alt="image">

    <h2 class="section-heading" style="font-size:25px;">{{bloglist.blog_title}}</h2>

    <p class="text-muted">
        Published Date: {{bloglist.blog_publish_date}} <br />
        Author:<i> {{bloglist.author_name}}</i></p>

    <p>{{bloglist.blog_description}} <br /></p>
    
        <input class="btn btn-primary btn-xl text-uppercase"  style="background-color:red;" type="submit" value="Delete">
        <a class="btn btn-primary btn-xl text-uppercase"  style="background-color:red;" href="/blogs">View List of all blogs</a>
    <br/>
    <br/>
    </form>
    </div>
{{/if}}

<!-- Bootstrap core JavaScript -->
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Plugin JavaScript -->
